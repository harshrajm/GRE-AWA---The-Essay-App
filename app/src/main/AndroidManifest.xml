<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.burntcarlabs.greawa">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".IssueActivity"
            android:label="Issue Essay" />
        <activity
            android:name=".ArgumentActivity"
            android:label="Argument Essay" />
        <activity
            android:name=".BookMarkActivity"
            android:label="Bookmarked Essays" />

        <provider
            android:name=".data.AwaProvider"
            android:authorities="com.burntcarlabs.greawa"
            android:exported="false" />

        <activity android:name=".ReadEssayActivity" />
        <activity android:name=".ProgressActivity"
            android:label="Progress"></activity>
    </application>

</manifest>